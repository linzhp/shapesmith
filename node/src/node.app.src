{application, node,
 [
  {description, "node"},
  {vsn, "1"},
  {modules, []},
  {registered, []},
  {applications, [
                  kernel,
                  stdlib,
                  crypto,
                  mochiweb,
                  webmachine
                 ]},
  {mod, { node_app, []}},
  {env, [{worker_executable, ["..", "..", "worker", "xcode", "Debug", "worker"]},
	 {worker_max_time, 60000},
	 {worker_pool_size, 1},
	 {lager, [
		  {handlers, [
			      {lager_console_backend, info},
			      {lager_file_backend, [
						    {"error.log", error, 10485760, "$D0", 5},
						    {"console.log", info, 10485760, "$D0", 5}
						   ]}
			     ]}
		 ]},
	 {db_module, node_disk_db},
	 {disk_db_dir, "db"},
	 {auth_module, node_local_auth},
	 {host, "http://localhost.shapesmith.net:8000"},
         {port, 8000}]}
 ]}.
